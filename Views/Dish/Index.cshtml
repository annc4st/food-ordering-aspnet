@model IEnumerable<cafeMvc.Models.Dish>

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class= "row">
        @foreach(var item in Model)
        {
            <div class="col-6 mb-4">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>

                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" class="h-50 d-inline-block" style="width: 70%;" >
                </div>

                <div class="d-flex justify-content-center">
                    @item.Price.ToString("C")
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">View Dish</a>
                </div>

                 <div class="d-flex justify-content-center">
                    <a class="btn btn-primary" asp-asp-controller="ShoppingCartController" asp-action="AddToCart" asp-route-id="@item.Id">Add to Cart</a>
                </div>
            </div>
        }
    </div>
</div>




